<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#605589AF"
        android:padding="10dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">



            <ImageView
                android:id="@+id/fotoHotel"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:src="@drawable/hotel3"
                app:layout_constraintBottom_toBottomOf="@+id/layoutCardView"
                app:layout_constraintEnd_toEndOf="@+id/layoutCardView"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="@+id/layoutCardView"
                app:layout_constraintTop_toTopOf="@+id/layoutCardView"
                app:layout_constraintVertical_bias=".0"

                />

            <TextView
                android:id="@+id/nombreHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NOMBRE DEL HOTEL"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/layoutCardView"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="@+id/layoutCardView"
                app:layout_constraintTop_toBottomOf="@+id/fotoHotel" />

            <TextView
                android:id="@+id/precioHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="$ 150000 COP"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/layoutCardView"
                app:layout_constraintEnd_toEndOf="@+id/layoutCardView"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="@+id/layoutCardView"
                app:layout_constraintTop_toBottomOf="@+id/nombreHotel"
                android:layout_marginBottom="10dp"/>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>